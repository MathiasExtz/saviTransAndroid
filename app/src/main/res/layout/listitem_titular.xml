    <TextView android:id="@+id/LblSubTitulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="normal"
        android:textSize="12sp" />
    <TextView android:id="@+id/LblSubTitulo2"
